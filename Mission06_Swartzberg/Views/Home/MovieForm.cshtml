@{
}
@model Movie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h1 class="h3 mb-0">🎬 Enter a Film</h1>
                </div>
                <div class="card-body">
                    <form method="post">

                        <input type="hidden" asp-for="MovieId" />

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold">Category:</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">Select a Category</option>
                                @foreach (Category c in ViewBag.Categories)
                                {
                                    <option value="@c.CategoryId">@c.CategoryName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Title:</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Year" class="form-label fw-semibold">Year:</label>
                            <input asp-for="Year" class="form-control" required min="1888" max="2026" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Director" class="form-label fw-semibold">Director:</label>
                            <input asp-for="Director" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label fw-semibold">Rating:</label>
                            <select asp-for="Rating" class="form-select">
                                <option value="G">G</option>
                                <option value="PG">PG</option>
                                <option value="PG-13">PG-13</option>
                                <option value="R">R</option>
                                <option value="NR">NR</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold d-block">Edited:</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="Edited" type="radio" id="no" value="false" class="form-check-input" checked />
                                <label class="form-check-label" for="no">No</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Edited" type="radio" id="yes" value="true" class="form-check-input" />
                                <label class="form-check-label" for="yes">Yes</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LentTo" class="form-label fw-semibold">Lent To:</label>
                            <input asp-for="LentTo" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold d-block">Copied to Plex:</label>
                            <div class="form-check form-check-inline">
                                <input asp-for="CopiedToPlex" type="radio" id="no" value="false" class="form-check-input" checked />
                                <label class="form-check-label" for="no">No</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="CopiedToPlex" type="radio" id="yes" value="true" class="form-check-input" />
                                <label class="form-check-label" for="yes">Yes</label>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-semibold">Notes:</label>
                            <input asp-for="Notes" maxlength="25" class="form-control" />
                            <div class="form-text">Maximum 25 characters.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg">➕ Submit Film</button>
                            <a asp-controller="Home" asp-action="MovieList" class="btn btn-outline-primary btn-lg">
                                Cancel
                            </a>
                        </div>

                        <div asp-validation-summary="All"></div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>