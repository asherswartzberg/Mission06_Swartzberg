@{
}
@model List<Movie>

<div class="container-fluid mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold">🎬 Film Collection</h1>
        <a asp-controller="Home" asp-action="MovieForm" class="btn btn-danger">➕ Add a Film</a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Director</th>
                        <th>Category</th>
                        <th>Rating</th>
                        <th>Edited</th>
                        <th>Lent To</th>
                        <th>Copied To Plex</th>
                        <th>Notes</th>
                        <th colspan="2" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@x.Title</td>
                            <td>@x.Year</td>
                            <td>@x.Director</td>
                            <td>@x.Category.CategoryName</td>
                            <td><span class="badge bg-secondary">@x.Rating</span></td>
                            <td>
                                @if (x.Edited)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>@x.LentTo</td>
                            <td>
                                @if (x.CopiedToPlex)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>@x.Notes</td>
                            <td>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">✏️ Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>