@{
}
@model Movie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="h4 mb-0">✅ Film Added Successfully!</h2>
                </div>
                <div class="card-body py-4">
                    <p class="fs-5 mb-4">
                        <span class="fw-bold">@Model.Title</span> (@Model.Year) has been added to the database. Thank you!
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            🏠 Return Home
                        </a>
                        <a asp-controller="Home" asp-action="MovieForm" class="btn btn-danger btn-lg">
                            ➕ Add Another Film
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>