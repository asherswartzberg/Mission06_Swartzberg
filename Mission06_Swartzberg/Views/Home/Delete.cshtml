@{
}
@model Movie

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 text-center">

            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="h4 mb-0">🗑️ Confirm Deletion</h2>
                </div>
                <div class="card-body py-4">

                    <p class="fs-5 mb-1">Are you sure you want to delete:</p>
                    <h3 class="fw-bold mb-4">@Model.Title (@Model.Year)</h3>
                    <p class="text-muted small mb-4">This action cannot be undone.</p>

                    <form method="post">
                        <input type="hidden" asp-for="MovieId" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg">🗑️ Yes, Delete</button>
                            <a class="btn btn-outline-secondary btn-lg" asp-controller="Home" asp-action="MovieList">✖️ Cancel</a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>