@{
    ViewData["Title"] = "Get to Know Joel";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h1 class="display-4 fw-bold mb-4">@ViewData["Title"]</h1>

            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🎭 Comedy</h5>
                    <p class="card-text">
                        Looking for a good laugh? Check out
                        <a href="https://www.qwcomedy.com/" class="btn btn-outline-primary btn-sm ms-2">
                            Quick Wits Comedy
                        </a>
                    </p>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🥓 Podcast</h5>
                    <p class="card-text">
                        Love podcasts? Check out
                        <a href="https://baconsale.com/" class="btn btn-outline-danger btn-sm ms-2">
                            Baconsale
                        </a>
                    </p>
                </div>
            </div>

            <div class="card shadow">
                <a href="https://baconsale.com/">
                    <img src="~/img/baconsalekate.jpg" class="card-img-top img-fluid rounded" alt="Baconsale" />
                </a>
                <div class="card-footer text-center">
                    <a href="https://baconsale.com/" class="btn btn-danger">Visit Baconsale</a>
                </div>
            </div>

        </div>
    </div>
</div>